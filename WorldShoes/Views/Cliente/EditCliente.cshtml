@model MVC.Model.DataBase.Model.Usuario

@{
    ViewBag.Title = "EditCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="shopper-informations">
    <div class="">
        <div class="col-md-3">
            <h3>DADOS CADASTRAIS</h3>
            <div class="shopper-info">
                @using (Html.BeginForm("UpdateCliente", "Cliente", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.Senha)
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @placeholder = "Nome" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.Sobrenome, new { htmlAttributes = new { @placeholder = "Sobrenome" } })
                        @Html.ValidationMessageFor(model => model.Sobrenome, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @placeholder = "CPF" } })
                        @Html.ValidationMessageFor(model => model.Cpf, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.DataNascimento, new { htmlAttributes = new { @placeholder = "data de nascimento", @type = "date", @Value = Model.DataNascimento.ToString("yyyy-MM-dd") } })
                        @Html.ValidationMessageFor(model => model.DataNascimento, "", new { @class = "text-danger" })
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @placeholder = "Email", @type = "email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        @Html.DropDownList("Sexo", new List<SelectListItem>() { new SelectListItem { Text = "Masculino", Value = "Masculino" }, new SelectListItem { Text = "Feminino", Value = "Feminino" } })
                        <input type="submit" class="btn btn-primary" style="margin-top:40px;" value="Salvar" />
                }
            </div>
        </div>
        <div class="col-md-3">
            <h2>Detalhes</h2>
            <a href="@Url.Action("DetailsCliente", "Cliente")">Detalhes sobre @Model.Nome</a>
        </div>
        <div class="col-md-3">
            <h2>Endereços</h2>
            <a href="@Url.Action("MeusEnderecos", "Enderecos",new { idUsuario = Model.Id})">Meus Endereços</a>
        </div>
        <div class="col-md-3">
            <h2>Preferências</h2>
            <a href="@Url.Action("Index", "Preferencia",new { idUsuario = Model.Id})">Preferências de @Model.Nome</a>
        </div>
        <hr/>
        <div class="col-md-3">
            <h2>Histórico de Buscas</h2>
            @Html.ActionLink("Histórico de busca", "HistoricoBuscas", "Cliente");
        </div>
    </div>
</div>