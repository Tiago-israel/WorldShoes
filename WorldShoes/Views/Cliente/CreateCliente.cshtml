@model MVC.Model.DataBase.Model.Usuario

@{
    ViewBag.Title = "CreateCliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--http://www.macoratti.net/14/09/mvc_flogin.htm-->
<section id="form">
    <!--form-->
    <div class="container">
        <div class="row">
            <div class="col-sm-4 col-sm-offset-1">
                <div class="login-form">
                    <!--login form-->
                    <h2>Já sou Cadastrado</h2>
                    @using (Html.BeginForm("Login", "Cliente", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true)
                        @Html.AntiForgeryToken()
                        <div>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "E-mail" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div>
                            @Html.PasswordFor(model => model.Senha, new { @placeholder = "Senha" })
                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                        </div>

                        <!--<input type="text" placeholder="Name" />
                        <input type="email" placeholder="Email Address" />-->
                        <span>
                            <input type="checkbox" class="checkbox">
                            Keep me signed in
                        </span>
                            <button type="submit" value="Create" class="btn btn-default">Login</button>


                    }
                </div><!--/login form-->
            </div>
            <div class="col-sm-1">
                <h2 class="or">OU</h2>
            </div>
            <div class="col-sm-4">
                <div class="signup-form">
                    <!--sign up form-->
                    <h2>Sou um novo cliente</h2>
                    @using (Html.BeginForm("GravarCliente", "Cliente", FormMethod.Post))
                    {
                        @*@Html.ValidationSummary(true, "", new { @class = "text-danger" })*@
                        @Html.ValidationSummary(true)
                        if (@ViewBag.Message != null)
                        {
                            <div style="color: red">
                                @ViewBag.Message
                            </div>
                        }

                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.Id)

                        <div>
                            @Html.ValidationMessageFor(model => model.Cpf, "", new { @class = "text-danger" })
                            @Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { placeholder = "CPF" } })

                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { placeholder = "Nome" } })
                            @*@Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })*@

                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { placeholder = "E-mail" } })
                            @*@Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })*@

                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                            @Html.PasswordFor(model => model.Senha, new { @placeholder = "Senha" })
                            @*@Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })*@
                        </div>
                        <div>
                            <button type="submit" value="Create" class="btn btn-default">Cadastrar</button>
                        </div>

                    }
                </div><!--/sign up form-->
            </div>
        </div>
    </div>
</section><!--/form-->