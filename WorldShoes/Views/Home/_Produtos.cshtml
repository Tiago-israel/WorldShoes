@model PagedList.IPagedList<MVC.Model.DataBase.Model.Produto>
@using PagedList.Mvc;
@{ 
    if(ViewBag.Id == null)
    {
        ViewBag.Id = 0;
    }
}
<div class="col-sm-9 padding-right">
    <div class="features_items">
        <!--features_items-->
        <h2 class="title text-center">Itens em Destaque</h2>
        <div class="row">
            @foreach (var item in Model)
            {
                <a href="@Url.Action("DetalhesProduto","Home",new {id = item.Id })">
                    <div class="col-sm-4">
                        <div class="product-image-wrapper">
                            <div class="single-products">
                                <div class="productinfo text-center">
                                    @foreach (var img in item.FotosProduto)
                                    {
                                        <img src="~/Content/img/@img.Imagem" alt="img" />
                                        break;
                                    }
                                    <h2>R$ @item.Valor</h2>
                                    <p>@item.Nome</p>
                                    <a href="@Url.Action("DetalhesProduto","Home",new {id = item.Id })" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Confira</a>
                                </div>
                                @*<div class="product-overlay">
                                        <div class="overlay-content">
                                            <h2>R$ @item.Valor</h2>
                                            <p>@item.Nome</p>
                                            <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
                                        </div>
                                    </div>*@
                            </div>
                            @*<div class="choose">
                                <ul class="nav nav-pills nav-justified">
                                    <li><a href=""><i class="fa fa-plus-square"></i>Add to wishlist</a></li>
                                    <li><a href=""><i class="fa fa-plus-square"></i>Add to compare</a></li>
                                </ul>
                            </div>*@
                        </div>
                    </div>
                </a>
            }
        </div>
        @Html.PagedListPager(Model, page => Url.Action(ViewBag.Acao, new {id = ViewBag.Id, page, pageSize = Model.PageSize }))
    </div><!--features_items-->
</div>

