@model PagedList.IPagedList< MVC.Model.DataBase.Model.Produto>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Home Page";
}
@if(ViewBag.Carrinho != null)
{
    <h1>Meu carrinho está chheio</h1>
}
<div class="col-sm-3">
    <div class="left-sidebar">
        <h2>Categorias</h2>
        <div class="panel-group category-products" id="accordian">
            <!--category-productsr-->
            @foreach (var categoria in ViewBag.Categorias)
            {
                string nome = categoria.Nome;
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            @Html.ActionLink(nome, "ProdutosPorCategoria", new { id = categoria.Id, page = 1, pageSize = 9 })
                        </h4>
                    </div>
                </div>
            }
        </div><!--/category-products-->
        <h2>Marcas</h2>
        <div class="panel-group category-products" id="accordian">
            <!--category-productsr-->
            @foreach (var fabricante in ViewBag.Fabricantes)
            {
                string nome = fabricante.razao_social;
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            @Html.ActionLink(nome, "ProdutosPorMarca", new { id = fabricante.Id, page = 1, pageSize = 9 })
                        </h4>
                    </div>
                </div>
            }
        </div><!--/category-products-->
        <div class="price-range">
            <!--price-range-->
            <h2>Limite de Preço</h2>
            <div class="well text-center">
                <input type="text" class="span2" value="" data-slider-min="0" data-slider-max="600" data-slider-step="5" data-slider-value="[250,450]" id="sl2"><br />
                <b class="pull-left">$ 0</b> <b class="pull-right">$ 600</b>
            </div>
        </div><!--/price-range-->

        <div class="shipping text-center">
            <!--shipping-->
            <img src="~/Content/img/shipping.jpg" alt="" />
        </div><!--/shipping-->

    </div>
</div>
<div id="target-products">
    @Html.Partial("_Produtos", Model)
</div>


