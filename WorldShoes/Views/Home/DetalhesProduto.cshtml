@model MVC.Model.DataBase.Model.Produto

@{
    ViewBag.Title = "DetalhesProduto";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.User = Session["Cliente"];
}

<div class="col-sm-12 padding-right">
    <div class="product-details">
        <!--product-details-->
        <div class="col-sm-5">
            <div class="view-product">
                <img id="main-img" class="main-img img-produto" src="~/Content/img/@Model.FotosProduto.FirstOrDefault().Imagem" alt="" />
                <h3>ZOOM</h3>
            </div>
            <div id="similar-product" class="carousel slide" data-ride="carousel">

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        @foreach (var item in Model.FotosProduto)
                        {
                            <img onclick="openPhoto('img-@item.Id')" class="img-produto" id="img-@item.Id" src="~/Content/img/@item.Imagem" alt="">
                        }
                    </div>
                </div>

                <!-- Controls -->
                @*<a class="left item-control" href="#similar-product" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a class="right item-control" href="#similar-product" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>*@
            </div>

        </div>
        <div class="col-sm-7">
            <div class="product-information">
                <!--/product-information-->
                <img src="images/product-details/new.jpg" class="newarrival" alt="" />
                <h2>@Model.Nome</h2>
                <p>Código Produto: @Model.Id</p>
                <img src="images/product-details/rating.png" alt="" />
                <span>
                    <span>R$ @Model.Valor</span>
                    <label>Quantity:</label>
                    <input type="text" value="3" />
                    <a class="btn btn-fefault cart" href="@Url.Action("AdicionarAoCarrinho","Home",new {id = Model.Id})">
                        <i class="fa fa-shopping-cart"></i>
                        Adicionar ao Carrinho
                    </a>
                </span>
                <p><b>Disponível:</b> Em estoque</p>
                <p>Cor: </p>
                @foreach (var item in ViewBag.produtoComOutrasCores)
                {
                    <a href="@Url.Action("DetalhesProduto","Home",new {id = item.Id })" style="float:left">
                        <div style="background-color:@item.Cor.Nome;" class="circulo"></div>
                    </a>

                }
                <a href=""><img src="images/product-details/share.png" class="share img-responsive" alt="" /></a>
            </div><!--/product-information-->
        </div>
    </div><!--/product-details-->

    <div class="category-tab shop-details-tab">
        <!--category-tab-->
        <div class="col-sm-12">
            <ul class="nav nav-tabs">
                <li><a href="#details" data-toggle="tab">Detalhes</a></li>
                <li><a href="#companyprofile" data-toggle="tab">Perfil da Companhia</a></li>
                <li><a href="#tag" data-toggle="tab">Tag</a></li>
                <li class="active"><a href="#reviews" data-toggle="tab">Avaliações (5)</a></li>
            </ul>
        </div>
        <div class="tab-content">
            <div class="tab-pane fade" id="details">
                <div>
                    <p>Produto: @Model.Nome</p>
                    <p>Fabricante: @Model.Fabricante.razao_social</p>
                    <p>Descrição: @Model.Descricao</p>
                    <p>Categoria: @Model.Categoria.Nome</p>
                    <p>Gênero: @Model.Genero.Nome</p>
                    <p>Tamanho: @Model.Tamanho</p>
                    Cor:<div style="background-color:@Model.Cor.Nome" class="circulo"></div>
                </div>
            </div>
            <div class="tab-pane fade" id="companyprofile">
                <div class="col-sm-3">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <img src="images/home/gallery1.jpg" alt="" />
                                <h2>$56</h2>
                                <p>Easy Polo Black Edition</p>
                                <button type="button" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Adicionar ao Carrinho</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <img src="images/home/gallery3.jpg" alt="" />
                                <h2>$56</h2>
                                <p>Easy Polo Black Edition</p>
                                <button type="button" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Adicionar ao Carrinho</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <img src="images/home/gallery2.jpg" alt="" />
                                <h2>$56</h2>
                                <p>Easy Polo Black Edition</p>
                                <button type="button" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Adicionar ao Carrinho</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <img src="images/home/gallery4.jpg" alt="" />
                                <h2>$56</h2>
                                <p>Easy Polo Black Edition</p>
                                <button type="button" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Adicionar ao Carrinho</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade" id="tag">
                <div class="col-sm-3">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <img src="images/home/gallery1.jpg" alt="" />
                                <h2>$56</h2>
                                <p>Easy Polo Black Edition</p>
                                <button type="button" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Adicionar ao Carrinho</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <img src="images/home/gallery2.jpg" alt="" />
                                <h2>$56</h2>
                                <p>Easy Polo Black Edition</p>
                                <button type="button" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <img src="images/home/gallery3.jpg" alt="" />
                                <h2>$56</h2>
                                <p>Easy Polo Black Edition</p>
                                <button type="button" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Adicionar ao Carrinho</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="product-image-wrapper">
                        <div class="single-products">
                            <div class="productinfo text-center">
                                <img src="images/home/gallery4.jpg" alt="" />
                                <h2>$56</h2>
                                <p>Easy Polo Black Edition</p>
                                <button type="button" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Adicionar ao Carrinho</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="tab-pane fade active in" id="reviews">
                <div class="col-sm-12">
                    <ul>
                        <li><a href=""><i class="fa fa-user"></i>EUGEN</a></li>
                        <li><a href="#"><i class="fa fa-clock-o"></i>@DateTime.Now.Hour : @DateTime.Now.Minute</a></li>
                        <li><a href="#"><i class="fa fa-calendar-o"></i>@DateTime.Now.Day/@DateTime.Now.Month/@DateTime.Now.Year</a></li>
                    </ul>
                    @if (ViewBag.User != null)
                    {
                        <p><b>Avalie o produto</b></p>
                        using (Html.BeginForm("AdicionarComentario", "Home"))
                        {
                            <input type="hidden" name="idProduto" value="@Model.Id" />
                            <textarea name="Comentario"></textarea>
                            <b>Rating: </b> <img src="images/product-details/rating.png" alt="" />
                            <div>
                                <input type="radio" value="bom" name="Pontuacao" style="float:left;" /><span> Bom</span>
                            </div>
                            <div>
                                <input type="radio" value="Ruim" name="Pontuacao" style="float:left;" /><span> Ruim</span>
                            </div>
                            <div>
                                <input type="radio" value="Nenhuma resposta" name="Pontuacao" checked style="float:left;" /><span> Nenhuma resposta</span>
                            </div>
                            <input type="submit" class="btn btn-default pull-right" />
                        }

                    }

                </div>
                <div class="col-sm-12">
                    <h4>Avaliações</h4>
                    <span>Bom: 100%</span>
                    @foreach (var item in Model.Avaliacoes)
                    {
                        <div class="col-sm-12" style="border:1px solid #EEEEEE">
                            <p>Usuario: @item.Usuario.Nome</p>
                            <p>Opinião geral: @item.Comentario</p>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div><!--/category-tab-->

    <div class="recommended_items">
        <!--recommended_items-->
        <h2 class="title text-center">Produtos relacionados</h2>

        <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active">
                    @foreach (var item in ViewBag.produtosRelacionados)
                    {
                        <div class="col-sm-4">
                            <div class="product-image-wrapper">
                                <div class="single-products">
                                    <div class="productinfo text-center">
                                        @foreach (var img in item.FotosProduto)
                                        {
                                            <img src="~/Content/img/@img.Imagem" style="width:127px;height:127px;" />
                                            break;
                                        }
                                        <h2>@item.Valor</h2>
                                        <p>@item.Nome</p>
                                        <button type="button" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Adicionar ao Carrinho</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
                <i class="fa fa-angle-left"></i>
            </a>
            <a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
                <i class="fa fa-angle-right"></i>
            </a>
        </div>
    </div><!--/recommended_items-->

</div>

